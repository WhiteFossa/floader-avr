 <Styles
        xmlns = "https://github.com/avaloniaui"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys = "clr-namespace: System; assembly = netstandard">

        <!-- Visible borders (for grouping) -->
        <Style Selector="Border.VisibleBorders">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />

            <Setter Property="CornerRadius" Value="5" />

            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="1" />
        </Style>

        <!-- Text block with right margin -->
        <Style Selector="TextBlock.RightMargin">
            <Setter Property="Margin" Value="0, 0, 5, 0" />
        </Style>

        <!-- Checkbox with right margin -->
        <Style Selector="CheckBox.RightMargin">
            <Setter Property="Margin" Value="0, 0, 5, 0" />
        </Style>

        <!-- Rounded buttons -->
        <Style Selector="Button/template/ContentPresenter">
            <Setter Property = "CornerRadius" Value = "5" />
        </Style>

        <!-- Button with top margin -->
        <Style Selector="Button.TopMargin">
            <Setter Property="Margin" Value="0, 5, 0, 0" />
        </Style>
</Styles> 